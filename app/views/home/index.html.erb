<div class="hero-section" style="background-image: url('/assets/dog-hero-bg.jpg'); background-size: cover; position: relative;">
  <!-- Overlay effect -->
  <div class="hero-overlay" style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.6);"></div>

  <!-- Hero content -->
  <div class="hero-content" style="position: relative; text-align: center; padding: 100px 20px; z-index: 2;">
    <h1 class="hero-title" style="font-size: 3rem; color: #fff; animation: fadeInDown 1s ease;">Welcome to Paw Traits!</h1>
    <p style="color: #eee; font-size: 1.2rem; margin-bottom: 20px;">Discover amazing dog breeds and learn more about your favorite furry companions.</p>
    <%= link_to 'Explore Breeds', breeds_path, class: 'cta-button', style: 'background-color: #ff6f61; padding: 10px 20px; color: #fff; font-size: 1.2rem; border-radius: 5px; transition: background-color 0.3s;' %>
  </div>
</div>

<div class="features-section" style="text-align: center; padding: 60px 20px; background-color: #f9f9f9;">
  <h2 style="font-size: 2.5rem; margin-bottom: 40px;">What We Offer</h2>

  <!-- Feature Grid -->
  <div class="features-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
    <!-- Feature Item 1 -->
    <div class="feature-item" style="background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.3s;">
      <img src="/assets/breed-icon.svg" alt="Breed Database" style="width: 50px; margin-bottom: 15px;">
      <h3 style="font-size: 1.5rem;">Breed Database</h3>
      <p>Access a comprehensive list of dog breeds with detailed information.</p>
    </div>

    <!-- Feature Item 2 -->
    <div class="feature-item" style="background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.3s;">
      <img src="/assets/search-icon.svg" alt="Interactive Search" style="width: 50px; margin-bottom: 15px;">
      <h3 style="font-size: 1.5rem;">Interactive Search</h3>
      <p>Search and filter through breeds to find the perfect match for your lifestyle.</p>
    </div>

    <!-- Feature Item 3 -->
    <div class="feature-item" style="background: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.3s;">
      <img src="/assets/care-icon.svg" alt="Pet Care Tips" style="width: 50px; margin-bottom: 15px;">
      <h3 style="font-size: 1.5rem;">Pet Care Tips</h3>
      <p>Explore articles and resources to keep your pet happy and healthy.</p>
    </div>
  </div>
</div>

<!-- Keyframe Animation -->
<style>
  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hover effect for feature items */
  .feature-item:hover {
    transform: translateY(-10px);
  }

  /* Hover effect for CTA button */
  .cta-button:hover {
    background-color: #ff3f3f;
  }
</style>
